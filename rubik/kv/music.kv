<SelectableLabel>:
#    canvas.before:
#        Color:
#            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
#        Rectangle:
#            pos: self.pos
#            size: self.size

    canvas:
        Color:
            rgba: 0, 25/255, 33/255, 0.4
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: 0.6, 0.6, 0.6, 0.5
        Line:
            width: 0.4
            rectangle: self.x, self.y, self.width, self.height

    text_size: self.size
    halign: 'left'
    valign: 'middle'
    padding_x: 20
    canvas.before:
        Color:
            rgba: (0, 75/255, 90/255, 1) if self.selected else (0, 25/255, 33/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<RV>:
    selectable_box: selectable_box
    viewclass: 'SelectableLabel'
    SelectableRecycleBoxLayout:
        id: selectable_box
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: False

<PlayListTool@BoxLayout>:
    canvas:
        Color:
            rgba: 0, 50/255, 67/255, 1
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:
#        pos_hint: {"x": 0, "top": 1}
        canvas:
            Color:
                rgba: 0, 25/255, 33/255, 1
            Rectangle:
                size: self.size
                pos: self.pos
            Color:
                rgba: 0.6, 0.6, 0.6, 0.5
            Line:
                width: 0.4
                rectangle: self.x-2, self.y-2, self.width +4, self.height
        MDIconButton:
            pos_hint: {"center_x": 0.1, "center_y": 0.5}
            theme_text_color: "Custom"
            text_color: 0, 75/255, 90/255, 1
            icon: "play"
            on_press: app.screen_manager.music_screen.play("")


        MDIconButton:
            icon: "volume-high"
            pos_hint: {"x": 0.15, "center_y": 0.5}
            theme_text_color: "Custom"
            text_color: 0, 75/255, 90/255, 1

        MDSlider:
            min: 0
            max: 100
            value: 40
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: 0.6, 1
            background_color: 1, 0, 0, 1
            id: slider
            hint: False
            step: 1
            orientation: 'horizontal'
            color: 0, 75/255, 90/255, 1

        MDIconButton:
            icon: "volume-mute"
            pos_hint: {"x": 0.8, "center_y": 0.5}
            theme_text_color: "Custom"
            text_color: 0, 75/255, 90/255, 1

        MDIconButton:
            pos_hint: {"center_x": 0.9, "center_y": 0.5}
            theme_text_color: "Custom"
            text_color: 0, 75/255, 90/255, 1
            icon: "folder-music"
            on_press: app.screen_manager.music_screen.choose_folder_music()

<MusicScreen>:
    play_list_view: play_list_view
    FloatLayout:
        canvas:
            Color:
                rgba: 0, 25/255, 33/255, 1
            Rectangle:
                size: self.size
                pos: self.pos

        MDIconButton:
            pos_hint: {"x": 0.04, "top": 0.98}
            theme_text_color: "Custom"
            text_color: 0, 75/255, 90/255, 1
            icon: "arrow-left-bold"
            on_press: app.screen_manager.current = "settings_screen"

        BoxLayout:
            size_hint: 0.7, 0.9
            pos_hint: {"center_x": 0.5, "top": 0.96}
            canvas.before:
                Color:
                    rgba: (0, 15/255, 20/255, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
                Color:
                    rgba: 0.6, 0.6, 0.6, 0.5
                Line:
                    width: 0.4
                    rectangle: self.x, self.y, self.width, self.height

            RV:
                id: play_list_view
#                canvas:
#                    Color:
#                        rgba: 0, 25/255, 33/255, 1
#                    Rectangle:
#                        size: self.size
#                        pos: self.pos

        PlayListTool:
            size_hint: 1, 0.1
            pos_hint: {"bottom": 0, "left": 0}
