#:import utils kivy.utils
#:include kv/settings_screen.kv

<SButton>:
    size_hint: 1, 1
    canvas:
        Color:
            rgba: 0, 25/255, 33/255, 1
        Rectangle:
            size: self.size
            pos: self.pos


<MImage@Image>:
    canvas.before:
        Color:
            rgba: 0, 25/255, 33/255, 1
        Rectangle:
            size: self.size
            pos: self.pos
    size_hint: 0.45, 0.45
    allow_stretch: True
    keep_ratio: True

<StopwatchLabel>:
    font_size: 36


<StartScreen>:
    stopwatch: stopwatch
    left_btn: left_btn
#    right_btn: right_btn
