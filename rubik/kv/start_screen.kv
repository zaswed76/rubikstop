#        Rectangle:
#            size: self.size
#            pos: self.pos

    FloatLayout
        SButton:
            id: left_btn
            on_parent:
                self.name = "left"
            pos_hint: {"left": 0}
        MImage:
            pos_hint: {"center_x": 0.5, "center_": 0.5}
            source: 'resource/right_alt.png'
        MImage:
            id: left_indicator
            pos_hint: {"center_x": 0.5, "y": 0.6}
            size_hint: 0.10, 0.10
            source: 'resource/sharred.png'

#----------------------------------------------------------------
        MDIconButton:
            pos_hint: {"left": 0, "top": 1}
            icon: "dots-vertical"
            theme_text_color: "Custom"
            text_color: 0, 75/255, 90/255, 1
            on_press: app.screen_manager.current = "settings_screen"





